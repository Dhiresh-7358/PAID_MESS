<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PAIDMESS" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_black</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="hint_font" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/outfit_regular</item>
        <item name="android:fontFamily">@font/outfit_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="splashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

<!--    <style name="Widget.BottomNavigationView"-->
<!--        parent="Widget.Material3.BottomNavigationView.ActiveIndicator">-->
<!--        <item name="fontFamily">@font/outfit_regular</item>-->
<!--    </style>-->

    <style name="AppSearchView" parent="" >
        <!-- Text Size -->
<!--        <item name="android:textSize">@dimen/textSizePrimary</item>-->
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/gray</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/gray</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="Theme.category" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>

    </style>
    
    <style name="Theme.category.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.category.DishNoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/purple</item>
    </style>

    <style name="ShapeAppearanceOverlay.CardView" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">10%</item>
        <item name="cornerSizeTopRight">10%</item>
    </style>


</resources>